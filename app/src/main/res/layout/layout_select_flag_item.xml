<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout tools:context=".ui.user_flag_selection.UserFlagSelectionFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_select_flag_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <CheckBox
        android:id="@+id/layout_select_flag_choose"
        android:padding="7dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:paddingStart="10dp"
        android:button="@color/colorPrimary"
        android:background="@drawable/checkbox_selector"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:stateListAnimator="@animator/anim_heart"/>

    <ImageView
        android:id="@+id/layout_select_flag_flag_image"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/layout_select_flag_country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="110dp"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <View
        android:paddingTop="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="25dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        />

</RelativeLayout>
