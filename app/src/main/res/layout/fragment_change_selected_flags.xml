<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="7"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/change_selected_flags_from_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorAccent"
            android:textSize="26sp"
            android:layout_gravity="center_vertical" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/change_selected_flags_list_flag_from"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:divider="@color/colorPrimary"
            android:dividerHeight="0dp"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="40dp"
            android:fillViewport="false"
            android:layoutAnimation="@anim/layout_animator"
            android:orientation="vertical"
            android:requiresFadingEdge="vertical"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_line"
            android:layout_gravity="center_vertical" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/change_selected_flags_list_flag_to"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:divider="@color/colorPrimary"
            android:dividerHeight="0dp"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="40dp"
            android:fillViewport="false"
            android:orientation="vertical"
            android:requiresFadingEdge="vertical"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/change_selected_flags_to_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorAccent"
            android:textSize="26sp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>
</layout>
