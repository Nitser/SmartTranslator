<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.admin.smart_translator.ui.splash.SplashFragment"
        android:label="" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@+id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.admin.smart_translator.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_photoCardInfoFragment"
            app:destination="@id/photoCardInfoFragment" />
        <action
            android:id="@+id/action_homeFragment_to_flagListFragment"
            app:destination="@id/flagListFragment" />
    </fragment>
    <fragment
        android:id="@+id/flagListFragment"
        android:name="com.example.admin.smart_translator.ui.select_flag_list.FlagSelectFlagList"
        android:label="@string/fragment_select_flags_title"
        tools:layout="@layout/fragment_select_flag_list" >
    </fragment>
    <fragment
        android:id="@+id/photoCardFragmentHistory"
        android:name="com.example.admin.smart_translator.ui.photo_card_list.PhotoCardFragment"
        android:label="" >
        <argument
            android:name="photoCardType"
            app:argType="com.example.admin.smart_translator.ui.photo_card_list.PhotoCardType"
            android:defaultValue="HistoryList" />
        <action
            android:id="@+id/action_photoCardFragment_to_photoCardInfoFragment"
            app:destination="@id/photoCardInfoFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/photoCardInfoFragment"
        android:name="com.example.admin.smart_translator.ui.photo_card_info.PhotoCardInfoFragment"
        android:label="PhotoCardInfoFragment" >
        <action
            android:id="@+id/action_photoCardInfoFragment_to_changeSelectedFlagsFragment"
            app:destination="@id/changeSelectedFlagsFragment" />
    </fragment>
    <fragment
        android:id="@+id/changeSelectedFlagsFragment"
        android:name="com.example.admin.smart_translator.ui.change_translated_flags.ChangeTranslatedFlagsFragment"
        android:label="ChangeSelectedFlagsFragment" />
</navigation>